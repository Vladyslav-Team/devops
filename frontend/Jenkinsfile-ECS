pipeline {
    agent none
    environment {
        SERVER_CREDENTIALS = 's3-access'
        BUCKET = 'vladyslav-team-bucket'

        API_URL = credentials('url_back_vt')
        REGION = 'eu-central-1'
        FRONTEND_ACCESS_KEY = credentials('vt_frontend_access_key')
        FRONTEND_SECRET_KEY = credentials('vt_frontend_secret_key')
        WEBHOOK_URL = credentials('DiscordWebhookVT')
        
        EC2_FRONTEND_ID=credentials('EC2-frontend-id')
        EC2_BACKEND_ID=credentials('EC2-backend-id')
    }
    stages {
        stage('Start servers') {
            agent { label 'master' }
            steps {
                script {
                    def computer = Jenkins.getInstance().getComputer('Frontend Server (Main and Dev) (Debian)')
                    def retryCount = 5
                    while (retryCount) {
                        if (computer.isOffline()) {
                            try {
                                sh('aws ec2 start-instances --instance-ids ${EC2_BACKEND_ID}')
                                sh('aws ec2 start-instances --instance-ids ${EC2_FRONTEND_ID}')
                                break
                            } catch (err) { 
                                echo("${err}")
                                sleep(time: 10)
                            }
                            retryCount--
                        }
                    }
                }
            }
        }
        stage('build') {
            agent { label 'ecs-node' }
            steps {
                git branch: 'dev', url: 'https://github.com/Vladyslav-Team/frontend.git'
                sh '''
                export REACT_APP_API_URL=${API_URL}
                export BUCKET="vladyslav-team-backend"
                export S3_ACCESS_KEY=${FRONTEND_ACCESS_KEY}
                export S3_SECRET_KEY=${FRONTEND_SECRET_KEY}
                export S3_REGION=${REGION}

                npm install --omit=dev
                npm run build
                chmod -R 755 ./build/*
                tar -cvzf ./html.tar.gz -C ./build .
                '''
                stash name: 'html', includes: 'html.tar.gz'
            }
        }
        stage('deploy') {
            agent { label 'node && target && dev' }
            steps {
                unstash name: 'html'
                sh'''
                    rm -rf /var/www/vladyslav-team/html/*
                    mv ./html.tar.gz /var/www/vladyslav-team/html/
                    tar -xzvf /var/www/vladyslav-team/html/html.tar.gz -C /var/www/vladyslav-team/html/ --strip-components=1
                    rm -rf ./*
                '''
            }
        }
    }
    post {
        always {
            discordSend description: "Jenkins pipeline build: ${currentBuild.currentResult}\nBuild log: ${BUILD_URL}consoleText",
                link: env.BUILD_URL,
                result: currentBuild.currentResult,
                title: JOB_NAME,
                webhookURL: "${env.WEBHOOK_URL}"

            script {
                node(label: 'master') {
                def computer = Jenkins.getInstance().getComputer('Frontend Server (Main and Dev) (Debian)')
                if (computer.isOnline()) {
                    def timeZone = TimeZone.getTimeZone("Europe/Kiev")
                    def time = new Date().format("HH:mm", timezone=timeZone)
                    echo(time)
                            
                    if (time >= "23:00" || time < "11:00") {
                        sleep(time: 300)
                            sh('aws ec2 stop-instances --instance-ids ${EC2_FRONTEND_ID}')
                            sh('aws ec2 stop-instances --instance-ids ${EC2_BACKEND_ID}')
                        }
                    }
                } 
            }
        }
    }
}
