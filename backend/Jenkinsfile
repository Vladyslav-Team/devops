pipeline {
    agent none
    environment {
        SERVER_CREDENTIALS = 'creds'
        WEBHOOK_URL = credentials('')
        BUCKET = 'artifacts-s3'
        REGION = 'eu-central-1'
    }
    stages {
        stage('Build') {
            agent { label 'java && jdk' }
            steps {
                git branch: 'dev', url: 'https://github.com/Vladyslav-Team/backend.git'
                sh '''
                    chmod 744 ./mvnw
                    ./mvnw clean package
                    mv ./target/UpTalentBackend*.jar ./UpTalentBackend.jar
                    tar -cvzf UpTalentBackend-${BUILD_NUMBER}.tar.gz ./UpTalentBackend.jar
                '''
                withAWS(credentials: '${SERVER_CREDENTIALS}', region: '${REGION}') {
                    s3Upload(file: 'UpTalentBackend-${BUILD_NUMBER}.tar.gz', bucket: '${BUCKET}')
                }
            }
        }
        stage('Deploy') {
            agent { label 'java && target && Team-Vladyslav' }
            steps {
                withAWS(credentials: '${SERVER_CREDENTIALS}', region: '${REGION}') {
                    s3Download(file:'UpTalentBackend-${BUILD_NUMBER}.tar.gz', bucket:'${BUCKET}', path:'UpTalentBackend-${BUILD_NUMBER}.tar.gz')
                }
                sh '''
                    sudo systemctl stop UpTalentBackend || true
                    chmod 755 ./backend/install-systemd-service.sh
                    ./backend/install-systemd-service.sh
                    tar xpvf UpTalentBackend-${BUILD_NUMBER}.tar.gz
                    mv -f ./UpTalentBackend.jar ~/UpTalentBackend.jar
                    chmod 755 ~/UpTalentBackend.jar
                    rm UpTalentBackend-${BUILD_NUMBER}.tar.gz
                    sudo systemctl start UpTalentBackend
                '''
            }
        }
    }
}
